generator client {
  provider      = "prisma-client-js"
  output        = "../server/src/generated/prisma"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("SERVER_DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model ImageTime {
  id      String @id
  name    String @db.VarChar(3)
  timeMs  Int
  imageId String
  image   Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)
}

model Image {
  id      String      @id @default(uuid())
  url     String
  altText String
  tags    ImageTag[]
  times   ImageTime[]
}

model ImageTag {
  id      String @id @default(uuid())
  posX    Float
  posY    Float
  name    String
  imageId String
  image   Image  @relation(fields: [imageId], references: [id], onDelete: Cascade)
}
